<!-- Главная страница -->
<!-- подключение шапки -->
<% include partials/header %>

<section id="department" class="department">
    <div id="department__border" class="container"> <!-- все по классике (если непонятно, смотри выше) -->
        <div class="row">
            <div class="col-lg-11"> <!-- надписи (без лого и кнопок) хэдэра занимают занимает 7 колонок -->
                <div class="department__content d-flex align-items-center">
                    <div class="logo d-flex justify-content-center"> <!-- класс логотипа -->
                        <!-- подключаем логотип URL ссылкой с сайта, с которого сдираем -->
                        <a href="http://localhost:3000/">
                            <img src="http://mducekt.mskobr.ru/images/cms/thumbs/1f1204c38f5d7f50f0ab6bcf597ef97666ee60e8/1423660333_jpg_250_135.jpg" alt="logo" class="logo">
                        </a>
                    </div>
                    <nav> <!-- навигация по сайту -->
                        <ul class="organizationName d-flex flex-column" > <!-- конструкция ul li делает список -->
                            <li class="organizationName__department"> <!-- класс департамента,  чувак в туторе сказал, что так надо писать, с двойным подчеркиванием (типо автоматическая документация, по-другому БЭМ - система, которую в яндексе придумали) -->
                                <a href="https://www.mos.ru/dogm/"> <!-- ссылка на сайт департамента -->
                                    ДЕПАРТАМЕНТ ОБРАЗОВАНИЯ ГОРОДА МОСКВЫ <!-- собсна сама надпись -->
                                </a>
                            </li>
                            <li class="organizationName__organization"> <!-- класс названия организации -->
                                <a>
                                    Государственное бюджетное образовательное учреждение
                                    дополнительного образования города Москвы "Московский
                                    детско-юношеский центр экологии, краеведения и туризма"
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section> <!-- закончился блок хэдэр -->

<section id="content" class="content">
    <div id="main__content" class="container">
        <div class="row">
            <div class="d-flex align-items-start">

                <div class="col-lg-4">
                    <ul class="accordion-menu">
                        <li>
                            <a class="link" href="http://localhost:3000">
                                <div class="dropdownlink"><i class="fa fa-road" aria-hidden="true"></i>
                                    Главная страница
                                    <i class="fa fa-chevron-down" aria-hidden="true"></i>
                                </div>
                            </a>
                        </li>
                        <li>
                            <div class="dropdownlink">
                                <i class="fa fa-paper-plane" aria-hidden="true"></i>
                                Информация об организации
                                <i class="fa fa-chevron-down" aria-hidden="true"></i>
                            </div>
                            <ul class="submenuItems">
                                <li><a href="#">Основная информация</a></li>
                                <li><a href="#">Контакты</a></li>
                                <li><a href="#">Обратная связь</a></li>
                            </ul>
                        </li>
                        <li>
                            <div class="dropdownlink"><i class="fa fa-quote-left" aria-hidden="true"></i>
                                Список олимпиад
                                <i class="fa fa-chevron-down" aria-hidden="true"></i>
                            </div>
                            <ul class="submenuItems">
                                <li><a href="#">олимпиада 1</a></li>
                                <li><a href="#">олимпиада 2</a></li>
                            </ul>
                        </li>
                        <li>
                            <div class="dropdownlink"><i class="fa fa-motorcycle" aria-hidden="true"></i>
                                Документы
                                <i class="fa fa-chevron-down" aria-hidden="true"></i>
                            </div>
                            <ul class="submenuItems">
                                <li><a href="#">Пользовательское соглашение</a></li>
                                <li><a href="#">Политика обработки данных</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>

                <div class="col-lg-8">
                    <div class="content__text">
                        <ul class="text d-flex flex-column" >

                            <% var newsBlock = {
                                    "idN" : 228,
                                    "title": "Макет кабины космического корабля «Буран» покажут школьникам на Космической субботе",
                                    "date": "14.08.2018",
                                    "content" : "Узнать об истории развития воздухоплавания и посмотреть на макеты авиационной техники разных лет — от дельтаплана до космического корабля — московские школьники смогут на «Космической субботе» в Центральном доме авиации и космонавтики. Мероприятие пройдет 18 августа в рамках образовательного проекта «Субботы московского школьника»."
                            }; %>

                            <div class="newsHolder">

                                <li class="content__about__news__date">
                                    <%= newsBlock.date %>
                                </li>

                                <li  class="content__about__title__succeed"  >
                                    <div id="newsTitle">
                                        <%= newsBlock.title %>
                                    </div>
                                    <hr>
                                </li>

                                <li  value="newsBlock.news[i].idNews" class="content__about__news__text">
                                    <div id="newsContent">
                                        <%= newsBlock.content %>
                                    </div>
                                </li>
                            </div>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



